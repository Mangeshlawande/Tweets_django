services:
  db:
    image: postgres:17
    volumes:
      - postgres_data:/var/lib/postgresql/data/
    environment:
      - POSTGRES_DB=django_db
      - POSTGRES_USER=django_user
      - POSTGRES_PASSWORD=secure_password
    healthcheck:
      test: ["CMD", "pg_isready", "-U", "django_user", "-d", "django_db"]
      interval: 5s
      timeout: 5s
      retries: 5

  web:
    build: .
    command: python manage.py runserver 0.0.0.0:8000
    volumes:
      - .:/app
    ports:
      - "8000:8000"
    environment:
      - DATABASE_URL=postgres://django_user:secure_password@db:5432/django_db
      - DEBUG=1
    depends_on:
      db:
        condition: service_healthy

volumes:
  postgres_data:
